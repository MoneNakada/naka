<section class="container">
	<h2 class="m-3 bg-light">注文情報確認</h2>
	<div class="row justify-content-around">
		<table>
			<thead>
				<tr class="bg-light">
					<th colspan="2", class="border">商品名</th>
					<th class="border">単価(税込)</th>
					<th class="border">数量</th>
					<th class="border">小計</th>
				</tr>
			</thead>
			<tbody>
			  <% @sum = 0 %>
				<% @cart_items.each do |cart_item| %>
					<% item = cart_item.item %>
					<tr>
						<td>
							<% if item.image.attached? %>
                <%= image_tag item.image, size: "300x300" %>
              <% else %>
                <%= image_tag 'no_image', size: "300x300" %>
              <% end %>
						</td>
						<td><%= item.name %></td>
						<td class="border"><%= item.with_tax_price %></td>
						<td class="border"><%= cart_item.amount %></td>
						<td class="border"><%= cart_item.subtotal %></td>
					</tr>
					<% @sum += cart_item.subtotal %>
				<% end %>
			</tbody>
		</table>
		<table>
			<thead>
				<tr>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td class="border bg-light">送料</td>
					<td class="border">800</td>
				</tr>
				<tr>
					<td class="border bg-light">商品合計</td>
					<td class="border"><%= @sum %></td>
				</tr>
				<tr>
					<td class="border bg-light">請求金額</td>
					<td class="bold border"><%= 800 + @sum %></td>
				</tr>
			</tbody>
		</table>
	</div>
	<%= form_with model: @order, url: orders_path do |f| %>
		<table>
      <thead>
        <th></th>
        <th></th>
      </thead>
      <tbody>
        <tr>
          <td><%= f.label :payment_method, "支払方法" %></td>
          <td><%= @order.payment_method_i18n %></td>
          <%= f.hidden_field :payment_method, value: @order.payment_method %>
        </tr>
        <tr>
          <td>お届け先</td>
          <td>〒<%= @order.postal_code %> <%= @order.destination %><br><%= @order.name %></td>
          <%= f.hidden_field :postal_code, value: @order.postal_code %>
					<%= f.hidden_field :destination, value: @order.destination %>
					<%= f.hidden_field :name, value: @order.name %>
        </tr>
      </tbody>
    </table>
		<div class="text-center">
			<%= f.submit "注文を確定する", class: "btn btn-success" %>
		</div>
	<% end %>
</section>