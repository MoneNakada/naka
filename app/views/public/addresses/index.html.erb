<section class="container">
	<h2 class="m-3 bg-light d-inline-block">配送先登録 / 一覧</h2>
  <%= render 'form', address: @address, submit: '新規登録' %>
	<table class="m-3">
		<thead>
			<tr class="bg-light">
				<th class="border">郵便番号</th>
				<th class="border">住所</th>
				<th class="border">宛名</th>
				<th class="border"></th>
			</tr>
		</thead>
		<tbody>
			<% @addresses.each do |address| %>
				<tr class="border">
					<td class="border"><%= address.postal_code %></td>
					<td class="border"><%= address.destination %></td>
					<td class="border"><%= address.name %></td>
					<td class="text-center border">
						<%= link_to "編集する", edit_address_path(address), class: "btn btn-success" %>
						<%= link_to "削除する", address_path(address), method: :delete,class: "btn btn-danger" %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</section>