<section class="container">
  <h2 class="bg-light">新規会員登録</h2>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
  
    <table class="customer_info customer_form">
      <thead>
        <th></th>
        <th></th>
        <th></th>
      </thead>
      <tbody>
        <tr>
          <td>名前</td>
          <td><%= f.label :first_name, "(姓)", class: "customer_name" %> <%= f.text_field :first_name, autofocus: true, :placeholder =>"令和" %></td>
          <td><%= f.label :last_name, "(名)", class: "customer_name" %> <%= f.text_field :last_name, :placeholder =>"道子" %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= f.label :first_name_kana, "(セイ)" %> <%= f.text_field :first_name_kana, :placeholder =>"レイワ" %></td>
          <td><%= f.label :last_name_kana, "(メイ)" %> <%= f.text_field :last_name_kana, :placeholder =>"ミチコ" %></td>
        </tr>
        <tr>
          <td><%= f.label :email, "メールアドレス" %></td>
          <td colspan="2"><%= f.email_field :email, autocomplete: "email", :placeholder =>"sample@example.com" %></td>
        </tr>
        <tr>
          <td><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></td>
          <td colspan="2"><%= f.text_field :postal_code, :placeholder =>"0000000", class: "jpostal_code" %></td>
        </tr>
        <tr>
          <td><%= f.label :address, "住所" %></td>
          <td colspan="2"><%= f.text_field :address, class: "jpostal_address col-xs-3", :placeholder =>"東京都渋谷区代々木神園町0-0" %></td>
        </tr>
        <tr>
          <td><%= f.label :telephone_number, "電話番号(ハイフンなし)" %></td>
          <td colspan="2"><%= f.text_field :telephone_number, :placeholder =>"00000000000" %></td>
        </tr>
        <tr>
          <td><%= f.label :password, "パスワード(#{@minimum_password_length}文字以上)" %></td>
          <td colspan="2"><%= f.password_field :password, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
          <td colspan="2"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <td></td>
          <td colspan="2"><%= f.submit "新規登録", class: "btn btn-success" %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
  
  <%= render "public/shared/links" %>
</section>  
