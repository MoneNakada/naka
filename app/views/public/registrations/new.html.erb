<section class="container">
  <h2 class="bg-light m-3 d-inline-block">新規会員登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="field row">
      <div class="col-2">
        名前
      </div>
      <div class="col-1 text-right">
        <%= f.label :first_name, "(姓)　" %>
      </div>

      <div class="col-2">
        <%= f.text_field :first_name, autofocus: true, :placeholder =>"令和" %>
      </div>

      <div class="col-1 text-right">
        <%= f.label :last_name, "(名)　" %>
      </div>

      <div class="col-2">
        <%= f.text_field :last_name, :placeholder =>"道子" %>
      </div>
    </div>

    <div class="field row">
      <div class="col-2">
        フリガナ
      </div>

      <div class="col-1 text-right">
        <%= f.label :first_name_kana, "(セイ)" %>
      </div>

      <div class="col-2">
        <%= f.text_field :first_name_kana, :placeholder =>"レイワ" %>
      </div>

      <div class="col-1 text-right">
        <%= f.label :last_name_kana, "(メイ)" %>
      </div>

      <div class="col-2">
        <%= f.text_field :last_name_kana, :placeholder =>"ミチコ" %>
      </div>
    </div>

    <div class="field row">
      <div class="col-3">
        <%= f.label :email, "メールアドレス" %>
      </div>
      <div class="col-4">
        <%= f.email_field :email, autocomplete: "email", :placeholder =>"sample@example.com" %>
      </div>
    </div>

    <div class="row field">
      <div class="col-3">
        <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
      </div>
      <div class="col-4">
        <%= f.text_field :postal_code, :placeholder =>"0000000" %>
      </div>
    </div>

    <div class="field row">
      <div class="col-3">
        <%= f.label :address, "住所" %>
      </div>
      <div class="col-4">
        <%= f.text_field :address, :size => 60, :placeholder =>"東京都渋谷区代々木神園町0-0" %>
      </div>
    </div>

    <div class="field row">
      <div class="col-3">
        <%= f.label :telephone_number, "電話番号(ハイフンなし)" %>
      </div>
      <div class="col-4">
        <%= f.text_field :telephone_number, :placeholder =>"00000000000" %>
      </div>
    </div>

    <div class="field row">
      <div class="col-3">
        <%= f.label :password, "パスワード(#{@minimum_password_length}文字以上)" %>
      </div>
      <div class="col-4">
        <%= f.password_field :password %>
      </div>
    </div>

    <div class="field row">
      <div class="col-3">
        <%= f.label :password_confirmation, "パスワード(確認用)" %>
      </div>
      <div class="col-4">
        <%= f.password_field :password_confirmation %>
      </div>
    </div>

    <div class="row">
      <div class="offset-3 col-4">
        <%= f.submit "新規登録", class: "btn btn-success w-50" %>
      </div>
    </div>
  <% end %>

  <%= render "public/shared/links" %>
</section>