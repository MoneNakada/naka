<section class="container">
	<h2 class="bg-light m-3 d-inline-block">注文履歴一覧</h2>
	<table class="mx-auto">
		<thead class="bg-light border-top">
			<tr>
				<th>購入日時</th>
				<th>購入者</th>
				<th>注文個数</th>
				<th>注文ステータス</th>
			</tr>
		</thead>
		<tbody>
			<% @orders.each do |order| %>
				<tr class="border-top border-bottom">
					<td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order), class: "border-bottom text-dark" %></td>
					<td><%= order.customer.full_name %></td>
					<td><%= order.order_details.sum(:amount) %></td>
					<td><%= order.status_i18n %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</section>