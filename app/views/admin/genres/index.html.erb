<section class="container">
	<h2 class="bg-light m-3">ジャンル一覧・追加</h2>

  <%= render 'form', genre: @genre, url: admin_genres_path, submit: '新規登録' %>

	<table class="mt-3">
		<thead>
			<tr class="border-top bg-light">
				<th>ジャンル</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @genres.each do |genre| %>
				<tr class="border-top border-bottom">
					<td><%= genre.name %></td>

					<td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</section>