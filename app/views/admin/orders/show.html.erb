<section class="container">
	<h2 class="bg-light m-3">注文履歴詳細</h2>
	<table>
		<thead>
			<tr>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>購入者</td>
				<td class="border-bottom"><%= @customer.full_name %></td>
			</tr>
			<tr>
				<td>注文日</td>
				<td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
			</tr>
			<tr>
				<td>配送先</td>
				<td>
					〒<%= @order.postal_code %>
					<%= @order.destination %><br>
					<%= @order.name %>
				</td>
			</tr>
			<tr>
				<td>支払方法</td>
				<td><%= @order.payment_method_i18n %></td>
			</tr>
			<tr>
				<td>注文ステータス</td>
				<td>
					<%= form_with model: @order, url: admin_order_path(@order) do |f| %>
						<%= f.select :status, Order.statuses.keys.map {|k| [I18n.t("enums.order.status.#{k}"), k]} %>
						<%= f.submit "更新", class: "btn btn-success" %>
					<% end %>
				</td>
			</tr>
		</tbody>
	</table>
	<div class="row justify-content-around">
		<table>
			<thead>
				<tr class="bg-light">
					<th>商品名</th>
					<th>単価(税込)</th>
					<th>数量</th>
					<th>小計</th>
					<th>制作ステータス</th>
				</tr>
			</thead>
			<tbody>
			  <% @sum = 0 %>
				<% @order_details.each do |order_detail| %>
					<% item = order_detail.item %>
					<tr>
						<td><%= link_to item.name, admin_item_path(item), class: "text-dark" %></td>
						<td class="text-center"><%= order_detail.price %></td>
						<td class="text-center"><%= order_detail.amount %></td>
						<td class="text-center"><%= order_detail.subtotal %></td>
						<td>
							<%= form_with model: order_detail, url: admin_order_order_detail_path(order_id: @order.id, id: order_detail.id) do |f| %>
								<%= f.select :making_status, OrderDetail.making_statuses.keys.map {|k| [I18n.t("enums.order_detail.making_status.#{k}"), k]} %>
								<%= f.submit "更新", class: "btn btn-success" %>
							<% end %>
						</td>
					</tr>
					<% @sum += order_detail.subtotal %>
				<% end %>
			</tbody>
		</table>

		<table>
			<thead>
				<tr>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>商品合計</td>
					<td><%= @sum %>円</td>
				</tr>
				<tr>
					<td>送料</td>
					<td><%= @order.shipping_cost %>円</td>
				</tr>
				<tr>
					<td>総計</td>
					<td><%= @order.grand_total.to_s(:delimited) %>円</td>
				</tr>
			</tbody>
		</table>
	</div>
</section>