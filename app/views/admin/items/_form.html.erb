<%= form_with model: item, url: url do |f| %>
	<table class="mx-auto">
		<thead>
			<tr>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td><%= f.label :image, "商品画像" %></td>
				<td><%= f.file_field :image,  accept:'image/*' %></td>
			</tr>
			<tr>
				<td><%= f.label :name, "商品名" %></td>
				<td><%= f.text_field :name, :placeholder =>"商品名" %></td>
			</tr>
			<tr>
				<td><%= f.label :introduction, "商品説明" %></td>
				<td><%= f.text_area :introduction, rows: 3, :placeholder =>"ここに説明文を記述します" %></td>
			</tr>
			<tr>
				<td><%= f.label :genre_id, "ジャンル" %></td>
				<td class="select_field"><%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "-- 選択してください --" %></td>
			</tr>
			<tr>
				<td><%= f.label :price, "税抜価格" %></td>
				<td><%= f.number_field :price, :placeholder =>"1000" %>円</td>
			</tr>
			<tr>
				<td><%= f.label :sales_status, "販売ステータス" %></td>
				<td class="select_field">
					<%= f.radio_button :is_active, true %>
					<%= f.label :is_active, "販売中" %>
					<%= f.radio_button :is_active, false %>
					<%= f.label :is_active, "販売停止中" %>
				</td>
			</tr>
		</tbody>
	</table>
	<div class="text-center">
		<%= f.submit submit, class: "btn btn-success m-3" %>
	</div>
<% end %>