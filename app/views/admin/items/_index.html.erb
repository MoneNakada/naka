<table class="mx-auto">
	<thead>
		<tr class="bg-light">
			<th>商品ID</th>
			<th>商品名</th>
			<th>税抜価格</th>
			<th>ジャンル</th>
			<th>ステータス</th>
		</tr>
	</thead>
	<tbody>
		<% items.each do |item| %>
			<tr>
				<td><%= item.id %></td>
				<td><%= link_to item.name, admin_item_path(item), class: "border-bottom text-dark" %></td>
				<td><%= item.price %></td>
				<td><%= link_to item.genre.name, admin_items_path(genre_id: item.genre_id), class: "text-dark" %></td>
				<td>
					<% if item.is_active? %>
						<span class="text-success">販売中</span>
					<% else %>
						<span class="text-dark">販売停止中</span>
					<% end %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>