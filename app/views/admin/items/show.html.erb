<section class="container">
	<h2 class="bg-light m-3">商品詳細</h2>
	<div class="row justify-content-around">
		<div>
			<% if @item.image.attached? %>
	          <%= image_tag @item.image, size: "300x300" %>
	        <% else %>
	          <%= image_tag 'no_image', size: "300x300" %>
	        <% end %>
		</div>
		<table>
			<thead>
				<tr>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>商品名</td>
					<td><%= @item.name %></td>
				</tr>
				<tr>
					<td>商品説明</td>
					<td><%= @item.introduction %></td>
				</tr>
				<tr>
					<td>ジャンル</td>
					<td><%= @item.genre.name %></td>
				</tr>
				<tr>
					<td>税込価格<br>(税抜価格)</td>
					<td><%= @item.with_tax_price %>(<%= @item.price %>)円</td>
				</tr>
				<tr>
					<td>販売ステータス</td>
					<td>
						<% if @item.is_active? %>
							<span class="text-success">販売中</span>
						<% else %>
							<span class="text-dark">販売停止中</span>
						<% end %>
					</td>
				</tr>
			</tbody>
		</table>
	</div>
	<div class="text-center">
		<%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
	</div>
</section>