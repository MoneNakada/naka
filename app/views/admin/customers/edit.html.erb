<section class="container">
	<h2 class="bg-light"><%= @customer.first_name %> <%= @customer.last_name %> さんの会員情報編集</h2>
	<%= form_for(@customer, url: admin_customer_path(@customer)) do |f| %>
		<table class="customer_info customer_form">
			<thead>
				<th></th>
				<th></th>
				<th></th>
			</thead>
			<tbody>
			  <tr>
					<td>会員ID</td>
					<td><%= @customer.id %></td>
				</tr>
				<tr>
					<td>氏名</td>
					<td><%= f.text_field :first_name, :placeholder =>"#{@customer.first_name}" %></td>
					<td><%= f.text_field :last_name, :placeholder =>"#{@customer.last_name}" %></td>
				</tr>
				<tr>
					<td>フリガナ</td>
					<td><%= f.text_field :first_name_kana, :placeholder =>"#{@customer.first_name_kana}" %></td>
					<td><%= f.text_field :last_name_kana, :placeholder =>"#{@customer.last_name_kana}" %></td>
				</tr>
				<tr>
					<td>郵便番号</td>
					<td colspan="2"><%= f.text_field :postal_code, :placeholder =>"#{@customer.postal_code}" %></td>
				</tr>
				<tr>
					<td>住所</td>
					<td colspan="2" class="field_for_address"><%= f.text_field :address, :placeholder =>"#{@customer.address}" %></td>
				</tr>
				<tr>
					<td>電話番号</td>
					<td colspan="2"><%= f.text_field :telephone_number, :placeholder =>"#{@customer.telephone_number}" %></td>
				</tr>
				<tr>
					<td>メールアドレス</td>
					<td colspan="2"><%= f.email_field :email, autocomplete: "email", :placeholder =>"#{@customer.email}" %></td>
				</tr>
				<tr>
					<td>会員ステータス</td>
					<td><%= f.radio_button :is_active, true %><%= f.label :is_active, "有効", class: "text-active" %></td>
					<td><%= f.radio_button :is_active, false %><%= f.label :is_active, "退会", class: "text-invalid" %></td>
				</tr>
				<tr>
				  <td></td>
					<td colspan="3"><%= f.submit "変更を保存", class: "btn btn-success" %></td>
				</tr>
			</tbody>
		</table>
	<% end %>
</section>