<section class="container">
	<h2 class="bg-light"><%= @customer.full_name %>さんの会員詳細</h2>
	<table>
		<thead>
			<th></th>
			<th></th>
			<th></th>
		</thead>
		<tbody>
			<tr>
				<td>会員ID</td>
				<td colspan="2"><%= @customer.id %></td>
			</tr>
			<tr>
				<td>氏名</td>
				<td><%= @customer.first_name %></td>
				<td><%= @customer.last_name %></td>
			</tr>
			<tr>
				<td>フリガナ</td>
				<td><%= @customer.first_name_kana %></td>
				<td><%= @customer.last_name_kana %></td>
			</tr>
			<tr>
				<td>郵便番号</td>
				<td colspan="2"><%= @customer.postal_code %></td>
			</tr>
			<tr>
				<td>住所</td>
				<td colspan="2"><%= @customer.address %></td>
			</tr>
			<tr>
				<td>電話番号</td>
				<td colspan="2"><%= @customer.telephone_number %></td>
			</tr>
			<tr>
				<td>メールアドレス</td>
				<td colspan="2"><%= @customer.email %></td>
			</tr>
			<tr>
				<td>会員ステータス</td>
				<td colspan="2">
					<% if @customer.is_active? %>
						<span class="text-success">有効	</span>					
					<% else %>
						<span class="text-dark">退会済み</span>
					<% end %>
				</td>
			</tr>
			<tr>
				<td><%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success" %></td>
				<td><%= link_to "注文履歴一覧を見る", admin_top_path, class: "btn btn-primary" %></td>
			</tr>
		</tbody>
	</table>
	
</section>